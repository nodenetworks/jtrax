<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="5.0" method="upgrade">
	<name>COM_JTRAX</name>
	<creationDate>21 September 2025</creationDate>
	<author>Michał Ostrykiewicz</author>
	<authorEmail>michal@nodenetworks.net</authorEmail>
	<authorUrl>www.nodenetworks.net</authorUrl>
	<copyright>Michał Ostrykiewicz - All rights reserved</copyright>
	<license>GNU General Public License v2</license>
	<version>2.0.0</version>
	<description>COM_JTRAX_DESCRIPTION</description>
	<update> 
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
			<schemapath type="postgresql">sql/updates/postgresql</schemapath>
		</schemas>
	</update>
	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<!-- Site Main File Copy Section -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>jtrax.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
	</files>	
	
 	<media destination="com_jtrax" folder="media">
		<filename>index.html</filename>
		<folder>images</folder>
	</media>
	<languages folder="site/language">
		<language tag="en-GB">en-GB/com_jtrax.ini</language>
		<language tag="es-ES">es-ES/com_jtrax.ini</language>
		<language tag="it-IT">it-IT/com_jtrax.ini</language>
		<language tag="pl-PL">pl-PL/com_jtrax.ini</language>
	</languages>
	
	<!-- Administration Menu Section -->
	<administration>
		<menu img="components/com_jtrax/assets/images/icon.gif">COM_JTRAX_MENU</menu>
		<submenu>
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<menu
				link="option=com_jtrax"
				>
				COM_JTRAX_MENU_CODES
			</menu>
			<menu
				link="option=com_jtrax&amp;view=statuses"
				>
				COM_JTRAX_MENU_STATUSES
			</menu>
		</submenu>

		<languages folder="admin/language">
			<language tag="en-GB">en-GB/com_jtrax.ini</language>
			<language tag="en-GB">en-GB/com_jtrax.sys.ini</language>
			<language tag="es-ES">es-ES/com_jtrax.ini</language>
			<language tag="es-ES">es-ES/com_jtrax.sys.ini</language>
			<language tag="it-IT">it-IT/com_jtrax.ini</language>
			<language tag="it-IT">it-IT/com_jtrax.sys.ini</language>
			<language tag="pl-PL">pl-PL/com_jtrax.ini</language>
			<language tag="pl-PL">pl-PL/com_jtrax.sys.ini</language>
		</languages>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>jtrax.php</filename>
			<filename>controller.php</filename>
			<filename>config.xml</filename>
			<folder>sql</folder>
			<folder>models</folder>
			<folder>assets</folder>
			<folder>views</folder>
			<folder>controllers</folder>
			<folder>tables</folder>
		</files>
	</administration>

<scriptfile>script.jtrax.php</scriptfile>

	<updateservers>
		<server type="extension" priority="1" name="JTrax Update Site">http://update.nodenetworks.net/jtrax/jtraxUpdate.xml</server>
	</updateservers>
</extension>
